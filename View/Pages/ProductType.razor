@page "/dongsp"
@inject HttpClient Http

<PageTitle>Dòng sản phẩm</PageTitle>

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý dòng sản phẩm</div> <hr />
                <div>
                    <div class="row">
                        <div class="form-group col-6 pr-0">
                            <label>Mã dòng sản phẩm</label>
                            <input type="text" class="form-control" @bind="DongSp.Ma" placeholder="Nhập mã dòng sản phẩm">
                        </div>
                        <div class="form-group col-6">
                            <label>Tên dòng sản phẩm</label>
                            <input type="text" class="form-control" @bind="DongSp.Ten" placeholder="Nhập tên dòng sản phẩm">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Create">Thêm dòng sản phẩm</button>
                        <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Update">Sửa dòng sản phẩm</button>
                    </div>
                </div>
                <h5 class="card-title">Danh sách dòng sản phẩm</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 20%">STT</th>
                                <th style="width: 25%">Mã dòng sản phẩm</th>
                                <th style="width: 25%">Tên dòng sản phẩm</th>
                                <th style="width: 30%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (DongSps != null)
                            {
                                @foreach (var x in DongSps.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <th>@(x.i + 1)</th>
                                        <td>@x.value.Ma</td>
                                        <td>@x.value.Ten</td>
                                        <td>
                                            <button class="btn btn-success px-5" @onclick="() => Display(x.value.Id)">Sửa dòng sản phẩm</button>
                                            <button @onclick="() => Delete(x.value.Id)" class="btn btn-danger px-5">Xóa dòng sản phẩm</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DongSp>? DongSps;
    private DongSp DongSp = new DongSp();

    protected override async Task OnInitializedAsync()
    {
        using(var httpClient = new HttpClient()){
            DongSps = await httpClient.GetFromJsonAsync<List<DongSp>>("https://localhost:7033/api/dongsp");
        }
    }

    private async Task Create()
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.PostAsJsonAsync("https://localhost:7033/api/dongsp", DongSp))
            {
                DongSps = await httpClient.GetFromJsonAsync<List<DongSp>>("https://localhost:7033/api/dongsp");
            }
        }
    }

    private async Task Delete(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.DeleteAsync("https://localhost:7033/api/dongsp/" + id))
            {
                DongSps = await httpClient.GetFromJsonAsync<List<DongSp>>("https://localhost:7033/api/dongsp");
            }
        }
    }

    private async Task Update()
    {
        using (var httpClient = new HttpClient())
        {
            using (await httpClient.PutAsJsonAsync<DongSp>("https://localhost:7033/api/dongsp/" + DongSp.Id, DongSp))
            {
                DongSps = await httpClient.GetFromJsonAsync<List<DongSp>>("https://localhost:7033/api/dongsp");
            }
        }
    }

    private async Task Display(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            var result = await httpClient.GetFromJsonAsync<DongSp>("https://localhost:7033/api/dongsp/" + id);
            if (result != null)
                DongSp = result;
        }
    }
}
