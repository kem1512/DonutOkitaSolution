@page "/cuahang"
@inject HttpClient Http

<PageTitle>Cửa hàng</PageTitle>

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý cửa hàng</div> <hr />
                <div>
                    <div class="row">
                        <div class="form-group col-6 pr-0">
                            <label>Mã cửa hàng</label>
                            <input type="text" class="form-control" @bind="CuaHang.Ma" placeholder="Nhập mã cửa hàng">
                        </div>
                        <div class="form-group col-6">
                            <label>Tên cửa hàng</label>
                            <input type="text" class="form-control" @bind="CuaHang.Ten" placeholder="Nhập tên cửa hàng">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Create">Thêm cửa hàng</button>
                        <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Update">Sửa cửa hàng</button>
                    </div>
                </div>
                <h5 class="card-title">Danh sách cửa hàng</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 20%">STT</th>
                                <th style="width: 25%">Mã cửa hàng</th>
                                <th style="width: 25%">Tên cửa hàng</th>
                                <th style="width: 30%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (CuaHangs != null)
                            {
                                @foreach (var x in CuaHangs.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <th>@(x.i + 1)</th>
                                        <td>@x.value.Ma</td>
                                        <td>@x.value.Ten</td>
                                        <td>
                                            <button class="btn btn-success px-5" @onclick="() => Display(x.value.Id)">Sửa cửa hàng</button>
                                            <button @onclick="() => Delete(x.value.Id)" class="btn btn-danger px-5">Xóa cửa hàng</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<CuaHang>? CuaHangs;
    private CuaHang CuaHang = new CuaHang();

    protected override async Task OnInitializedAsync()
    {
        using(var httpClient = new HttpClient()){
            CuaHangs = await httpClient.GetFromJsonAsync<List<CuaHang>>("https://localhost:7033/api/cuahang");
        }
    }

    private async Task Create()
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.PostAsJsonAsync("https://localhost:7033/api/cuahang", CuaHang))
            {
                CuaHangs = await httpClient.GetFromJsonAsync<List<CuaHang>>("https://localhost:7033/api/cuahang");
            }
        }
    }

    private async Task Delete(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.DeleteAsync("https://localhost:7033/api/cuahang/" + id))
            {
                CuaHangs = await httpClient.GetFromJsonAsync<List<CuaHang>>("https://localhost:7033/api/cuahang");
            }
        }
    }

    private async Task Update()
    {
        using (var httpClient = new HttpClient())
        {
            using (await httpClient.PutAsJsonAsync<CuaHang>("https://localhost:7033/api/cuahang/" + CuaHang.Id, CuaHang))
            {
                CuaHangs = await httpClient.GetFromJsonAsync<List<CuaHang>>("https://localhost:7033/api/cuahang");
            }
        }
    }

    private async Task Display(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            var result = await httpClient.GetFromJsonAsync<CuaHang>("https://localhost:7033/api/cuahang/" + id);
            if (result != null)
                CuaHang = result;
        }
    }
}
