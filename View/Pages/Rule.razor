@page "/chucvu"
@inject HttpClient Http

<PageTitle>Chức vụ</PageTitle>

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Quản lý chức vụ</div> <hr />
                <div>
                    <div class="row">
                        <div class="form-group col-6 pr-0">
                            <label>Mã chức vụ</label>
                            <input type="text" class="form-control" @bind="ChucVu.Ma" placeholder="Nhập mã chức vụ">
                        </div>
                        <div class="form-group col-6">
                            <label>Tên chức vụ</label>
                            <input type="text" class="form-control" @bind="ChucVu.Ten" placeholder="Nhập tên chức vụ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Create">Thêm chức vụ</button>
                            <button class="btn btn-light px-5 mr-2 mb-2" @onclick="Update">Sửa chức vụ</button>
                        </div>
                    </div>
                </div>
                <h5 class="card-title">Danh sách chức vụ</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 20%">STT</th>
                                <th style="width: 25%">Mã chức vụ</th>
                                <th style="width: 25%">Tên chức vụ</th>
                                <th style="width: 30%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ChucVus != null)
                            {
                                @foreach (var x in ChucVus.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <th>@(x.i + 1)</th>
                                        <td>@x.value.Ma</td>
                                        <td>@x.value.Ten</td>
                                        <td>
                                            <button class="btn btn-success px-5" @onclick="() => Display(x.value.Id)">Sửa chức vụ</button>
                                            <button @onclick="() => Delete(x.value.Id)" class="btn btn-danger px-5">Xóa chức vụ</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ChucVu>? ChucVus;
    private ChucVu ChucVu = new ChucVu();

    protected override async Task OnInitializedAsync()
    {
        using(var httpClient = new HttpClient()){
            ChucVus = await httpClient.GetFromJsonAsync<List<ChucVu>>("https://localhost:7033/api/chucvu");
        }
    }

    private async Task Create()
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.PostAsJsonAsync("https://localhost:7033/api/chucvu", ChucVu))
            {
                ChucVus = await httpClient.GetFromJsonAsync<List<ChucVu>>("https://localhost:7033/api/chucvu");
            }
        }
    }

    private async Task Delete(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.DeleteAsync("https://localhost:7033/api/chucvu/" + id))
            {
                ChucVus = await httpClient.GetFromJsonAsync<List<ChucVu>>("https://localhost:7033/api/chucvu");
            }
        }
    }

    private async Task Update()
    {
        using (var httpClient = new HttpClient())
        {
            using (await httpClient.PutAsJsonAsync<ChucVu>("https://localhost:7033/api/chucvu/" + ChucVu.Id, ChucVu))
            {
                ChucVus = await httpClient.GetFromJsonAsync<List<ChucVu>>("https://localhost:7033/api/chucvu");
            }
        }
    }

    private async Task Display(Guid? id)
    {
        using (var httpClient = new HttpClient())
        {
            var result = await httpClient.GetFromJsonAsync<ChucVu>("https://localhost:7033/api/chucvu/" + id);
            if (result != null)
                ChucVu = result;
        }
    }
}
